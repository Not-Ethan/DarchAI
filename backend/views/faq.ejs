<!DOCTYPE html>
<html lang="en">
<head>
  <title>FAQ</title>
  <%- include('partials/header') %>
  <link rel="stylesheet" href="/css/faq.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container my-4">
    <h1 class="text-center">Frequently Asked Questions</h1>

    <div class="accordion mt-5" id="faqAccordion">
      <% for(let i = 0; i<qna.length; i++){ %>
        <div class="card">
          <div class="card-header" id="heading<%=i%>">
            <h2 class="mb-0">
              <button class="btn btn-link collapsed question-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=i%>" aria-expanded="false" aria-controls="collapse<%=i%>">
                <%-qna[i].question%>
              </button>
            </h2>
          </div>

          <div id="collapse<%=i%>" class="collapse" aria-labelledby="heading<%=i%>" data-parent="#faqAccordion">
            <div class="card-body">
                <%-qna[i].answer%>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('partials/footer') %>
  <script src="/js/faq.js"></script>
</body>
</html>
