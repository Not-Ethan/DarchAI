<!DOCTYPE html>
<html>
<head>
  <%- include('partials/header') %>
  <link rel="stylesheet" href="css/ai.css"> <!-- Custom styles for this template -->
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container">
    <h1>Submit New Task</h1>
    <form id="aiForm">
      <div class="form-group">
        <label for="argument">Argument</label>
        <input type="text" class="form-control" id="argument" placeholder="Enter your argument" required>
      </div>
      <div class="form-group">
        <label for="num">Number of Responses</label>
        <input type="number" class="form-control" id="num" min="1" max="100" required>
      </div>
      <label for="sentenceModel">Sentence Model</label>
      <select class="form-select" id="sentenceModel" name="sentenceModel">
        <option value="0">Plato</option>
        <option value="1">Aristotle</option>
      </select>
      <label for="taglineModel">Tagline Model</label>
      <select class="form-select" id="taglineModel" name="taglineModel">
        <option value="0">Orion</option>
        <option value="1">Andromeda</option>
      </select>
      <hr>
      <button type="submit" class="btn btn-primary">Generate Response</button>
    </form>
    <div id="result"></div>

    <a class="btn btn-primary" href="URL_TO_YOUR_DOCS" role="button">Docs</a>
    <a class = "btn btn-success" href="/progress">Check Task Progress</a>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <%- include('partials/footer') %>
  <script src="js/ai.js"></script> <!-- Custom script for this page -->
</body>
</html>
